---
import "../styles/global.css";

interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Sego Pecel Mbak Mintul - Kelezatan Otentik Khas Madiun",
    description = "Nikmati Pecel Khas Madiun yang otentik, Lontong Pecel, dan Sate legendaris dengan bumbu kacang rahasia di Sego Pecel Mbak Mintul.",
} = Astro.props;
---

<!doctype html>
<html lang="id" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <meta
            name="keywords"
            content="sego pecel, pecel madiun, kuliner madiun, sate, lontong pecel, warung makan, mbak mintul"
        />
        <link rel="canonical" href={Astro.url} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content="https://www.pecelmintul.my.id/images/hero.webp"
        />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta
            property="twitter:image"
            content="https://www.pecelmintul.my.id/images/hero.webp"
        />

        <title>{title}</title>

        <script
            type="application/ld+json"
            set:html={JSON.stringify({
                "@context": "https://schema.org",
                "@type": "Restaurant",
                name: "Sego Pecel Mbak Mintul",
                image: "https://www.pecelmintul.my.id/images/hero.webp",
                description:
                    "Nikmati Pecel Khas Madiun yang otentik, Lontong Pecel, dan Sate legendaris dengan bumbu kacang rahasia di Sego Pecel Mbak Mintul.",
                address: {
                    "@type": "PostalAddress",
                    streetAddress: "Jl. Khas Madiun No. 1",
                    addressLocality: "Madiun",
                    addressRegion: "Jawa Timur",
                    postalCode: "63100",
                    addressCountry: "ID",
                },
                priceRange: "Rp 5.000 - Rp 50.000",
                servesCuisine: "Indonesian",
                telephone: "+6287823510396",
            })}
        />

        <!-- Google Fonts: Outfit -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet"
        />

        <!-- AOS Animation CSS -->
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    </head>
    <body
        class="font-sans antialiased overflow-x-hidden w-full selection:bg-primary selection:text-white"
    >
        <slot />

        <!-- Initialize AOS -->
        <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script is:inline>
            AOS.init({
                duration: 800,
                once: true,
                offset: 100,
                easing: "ease-out-cubic",
            });
        </script>
    </body>
</html>
