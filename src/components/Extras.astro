---
import { Separator } from "@/components/ui/separator";

const sates = [
    { name: "Sate Ayam", price: "3k", desc: "Bumbu meresap sempurna" },
    { name: "Sate Usus", price: "2.5k", desc: "Gurih dan krispi" },
    { name: "Sate Keong", price: "3k", desc: "Kenyal manis pedas" },
    { name: "Sate Telur Puyuh", price: "3.5k", desc: "Favorit anak-anak" },
];

const gorengans = [
    { name: "Tempe Mendoan", price: "1.5k", desc: "Digoreng setengah matang" },
    { name: "Bakwan", price: "1.5k", desc: "Sayuran segar & renyah" },
    { name: "Tahu Isi", price: "2k", desc: "Isian sayur padat" },
];

const drinks = [
    { name: "Es Teh", price: "3k", desc: "Segar legendaris" },
    { name: "Teh Hangat", price: "2.5k", desc: "Hangat menenangkan" },
    { name: "Es Krampul", price: "4k", desc: "Teh dengan irisan jeruk" },
    { name: "Es Sirup", price: "3k", desc: "Manis menyegarkan" },
    { name: "Susu Jahe", price: "5k", desc: "Hangat menyehatkan" },
    { name: "Kopi Hitam", price: "3k", desc: "Kopi tubruk mantap" },
];
---

<section class="py-20 bg-background text-foreground relative overflow-hidden">
    <div
        class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-primary/5 rounded-full blur-3xl"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 -ml-20 -mb-20 w-96 h-96 bg-orange-500/5 rounded-full blur-3xl"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-16" data-aos="fade-down">
            <span
                class="text-primary font-bold tracking-wider uppercase text-sm"
                >Pelengkap Sempurna</span
            >
            <h2 class="text-3xl md:text-5xl font-bold mt-2">
                Lauk & <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-teal-600"
                    >Minuman Segar</span
                >
            </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-12">
            {/* Sate Section */}
            <div class="space-y-6" data-aos="fade-up" data-aos-delay="0">
                <div class="flex items-center gap-4 mb-6">
                    <div class="p-3 rounded-full bg-green-100 text-green-600">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"
                            ></path><path d="m3.3 7 8.7 5 8.7-5"></path><path
                                d="M12 22V12"></path></svg
                        >
                    </div>
                    <h3 class="text-2xl font-bold">Aneka Sate</h3>
                </div>
                <div
                    class="bg-card rounded-2xl p-6 shadow-sm border border-border/50"
                >
                    <ul class="space-y-4">
                        {
                            sates.map((item, i) => (
                                <li>
                                    <div class="flex justify-between items-baseline">
                                        <h4 class="font-semibold text-lg">
                                            {item.name}
                                        </h4>
                                        <span class="font-bold text-primary">
                                            {item.price}
                                        </span>
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        {item.desc}
                                    </p>
                                    {i < sates.length - 1 && (
                                        <Separator className="mt-4 opacity-50" />
                                    )}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>

            {/* Gorengan Section */}
            <div class="space-y-6" data-aos="fade-up" data-aos-delay="100">
                <div class="flex items-center gap-4 mb-6">
                    <div class="p-3 rounded-full bg-orange-100 text-orange-600">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><circle cx="12" cy="12" r="10"></circle><path
                                d="M14.31 8l5.74 9.94"></path><path
                                d="M9.69 8h11.48"></path></svg
                        >
                    </div>
                    <h3 class="text-2xl font-bold">Gorengan Renyah</h3>
                </div>
                <div
                    class="bg-card rounded-2xl p-6 shadow-sm border border-border/50"
                >
                    <ul class="space-y-4">
                        {
                            gorengans.map((item, i) => (
                                <li>
                                    <div class="flex justify-between items-baseline">
                                        <h4 class="font-semibold text-lg">
                                            {item.name}
                                        </h4>
                                        <span class="font-bold text-primary">
                                            {item.price}
                                        </span>
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        {item.desc}
                                    </p>
                                    {i < gorengans.length - 1 && (
                                        <Separator className="mt-4 opacity-50" />
                                    )}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>

            {/* Drinks Section */}
            <div class="space-y-6" data-aos="fade-up" data-aos-delay="200">
                <div class="flex items-center gap-4 mb-6">
                    <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-6 h-6"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="M17 8h1a4 4 0 1 1 0 8h-1"></path><path
                                d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z"
                            ></path><line x1="6" x2="6" y1="2" y2="8"
                            ></line><line x1="10" x2="10" y1="2" y2="8"
                            ></line><line x1="14" x2="14" y1="2" y2="8"
                            ></line></svg
                        >
                    </div>
                    <h3 class="text-2xl font-bold">Minuman Segar</h3>
                </div>
                <div
                    class="bg-card rounded-2xl p-6 shadow-sm border border-border/50"
                >
                    <ul class="space-y-4">
                        {
                            drinks.map((item, i) => (
                                <li>
                                    <div class="flex justify-between items-baseline">
                                        <h4 class="font-semibold text-lg">
                                            {item.name}
                                        </h4>
                                        <span class="font-bold text-primary">
                                            {item.price}
                                        </span>
                                    </div>
                                    <p class="text-sm text-muted-foreground">
                                        {item.desc}
                                    </p>
                                    {i < drinks.length - 1 && (
                                        <Separator className="mt-4 opacity-50" />
                                    )}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
