---
import { Card, CardContent } from "@/components/ui/card";
import { Star, MapPin } from "lucide-react";
import { Button } from "@/components/ui/button";

const reviews = [
    {
        name: "Ridwan Jamil",
        text: "Pecelnya juara! Bumbu kacangnya medok banget, mirip kayak di kampung halaman.",
        rating: 5,
    },
    {
        name: "Sucipto",
        text: "Tempatnya bersih, pelayanannya ramah. Sate keongnya wajib coba sih.",
        rating: 5,
    },
    {
        name: "Welas Supriyadi",
        text: "Lontong sayurnya gurih, porsinya pas buat sarapan. Recommended!",
        rating: 4,
    },
];
---

<section class="py-20 bg-secondary/30 relative overflow-hidden">
    <div class="container mx-auto px-4 grid lg:grid-cols-2 gap-16 items-start">
        {/* Testimonials */}
        <div class="space-y-8" data-aos="fade-right">
            <h2 class="text-3xl md:text-4xl font-bold">
                Apa Kata <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-teal-600"
                    >Mereka?</span
                >
            </h2>
            <div class="space-y-6">
                {
                    reviews.map((review) => (
                        <Card className="border-none shadow-md bg-background/80 backdrop-blur-sm">
                            <CardContent className="p-6">
                                <div class="flex gap-1 text-yellow-500 mb-2">
                                    {[...Array(review.rating)].map(() => (
                                        <Star className="w-4 h-4 fill-current" />
                                    ))}
                                </div>
                                <p class="text-muted-foreground italic mb-4">
                                    "{review.text}"
                                </p>
                                <p class="font-bold text-foreground">
                                    - {review.name}
                                </p>
                            </CardContent>
                        </Card>
                    ))
                }
            </div>
        </div>

        {/* Location */}
        <div class="space-y-8 h-full flex flex-col" data-aos="fade-left">
            <div>
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Temukan Kami
                </h2>
                <p class="text-muted-foreground mb-6">
                    Nikmati suasana santai sambil menyantap hidangan legendaris.
                </p>
            </div>

            <div
                class="flex-grow rounded-2xl overflow-hidden shadow-xl border border-border h-[400px] relative group"
            >
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d494.9792886227068!2d110.9091101!3d-7.0287532!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e70b7001c2c34f9%3A0xe78c4c02ea99fbe9!2sSego%20pecel%20mbak%20MINTUL!5e0!3m2!1sen!2sid!4v1767439555343!5m2!1sen!2sid"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    class="w-full h-full grayscale group-hover:grayscale-0 transition-all duration-500"
                ></iframe>

                <div
                    class="absolute bottom-4 left-4 right-4 bg-white/90 backdrop-blur-md p-4 rounded-xl shadow-lg"
                >
                    <div class="flex items-start gap-3">
                        <MapPin class="w-5 h-5 text-primary mt-1 shrink-0" />
                        <div>
                            <p class="font-semibold text-foreground">
                                Sego Pecel Mbak Mintul
                            </p>
                            <p class="text-sm text-muted-foreground">
                                XWC5+GJ9, Nglawu, Grobogan, Kabupaten Grobogan,
                                Jawa Tengah 58153
                            </p>
                            <p class="text-xs text-muted-foreground mt-1">
                                Buka: 17.00 - 00.00 WIB
                            </p>
                        </div>
                        <a
                            href="https://goo.gl/maps/genericLocationId"
                            target="_blank"
                            class="ml-auto inline-flex items-center justify-center rounded-full text-xs h-9 px-3 bg-primary text-primary-foreground hover:bg-primary/90"
                        >
                            Petunjuk Arah
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
